# Edictflow Configuration
# Copy this file to .env and configure the values

# =============================================================================
# Required Settings
# =============================================================================

# Database password (required)
DB_PASSWORD=your-secure-database-password

# JWT secret for authentication (required - generate with: openssl rand -hex 32)
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters

# =============================================================================
# Optional Settings
# =============================================================================

# Database configuration
DB_USER=edictflow
DB_NAME=edictflow

# Edictflow version (use specific version or 'latest')
EDICTFLOW_VERSION=latest

# Port configuration
API_PORT=8080
WORKER_PORT=8081
WEB_PORT=3000

# Public URLs (change if behind a reverse proxy)
PUBLIC_API_URL=http://localhost:8080
PUBLIC_WS_URL=ws://localhost:8081

# =============================================================================
# Observability (Optional)
# =============================================================================

# Splunk HEC integration
SPLUNK_ENABLED=false
SPLUNK_HEC_URL=http://splunk:8088/services/collector/event
SPLUNK_HEC_TOKEN=your-hec-token
SPLUNK_SOURCE=edictflow
SPLUNK_SOURCETYPE=edictflow:metrics
SPLUNK_INDEX=edictflow

# AppDynamics RUM (frontend)
NEXT_PUBLIC_APPDYNAMICS_ENABLED=false
NEXT_PUBLIC_APPDYNAMICS_APP_KEY=
NEXT_PUBLIC_APPDYNAMICS_ADR_URL=
NEXT_PUBLIC_APPDYNAMICS_BEACON_URL=
